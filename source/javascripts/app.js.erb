// Smooth scrolling for anchors
$(function() {
  $("a[href^='#']").on('click', function(e) {
     // don't mess up with Bootstrap's carousel arrows
     if ($(this).hasClass("carousel-control")) return true;

     e.preventDefault();

     var hash = this.hash;

     $('html, body').animate({
       scrollTop: $(this.hash).offset().top
     }, 300, function() {
       window.location.hash = hash;
     });
  });
});


// Pricing toggle
$(function() {
  $("#pricing-toggle .nav li").click(function(e) {
    e.preventDefault();

    $("#pricing-toggle .nav li").removeClass("active");
    $(this).addClass("active");

    var option = $(this).data("option");
    $("#pricing-options .price").hide();
    $("#pricing-options .price." + option).show();
  });
});


// Smooth scrolling for anchors
$(function() {
  $("a[href^='#']").on('click', function(e) {
     // don't mess up with Bootstrap's carousel arrows
     if ($(this).hasClass("carousel-control")) return true;

     e.preventDefault();

     var hash = this.hash;

     $('html, body').animate({
       scrollTop: $(this.hash).offset().top
     }, 300, function() {
       window.location.hash = hash;
     });
  });
});


// Hosting toggle
$(function() {
  if (!$('#hosting-dropdown').length) return;

  $('#hosting-dropdown li').on('click', function () {
      var currency = $(this).data("currency");

      $('#hosting-plans .currency').hide();
      $('#hosting-plans .currency.' + currency).show();

      $('#hosting-selector .selected-label').html($(this).find('.description').html());
  });

  $.getJSON("https://api.buckybox.com/v1/geoip/", function(geoip) {
    var currency = geoip.currency.toLowerCase();

    $('#hosting-dropdown li[data-currency=' + currency + ']').click();
  });
});


%header#header
  .container
    .navbar.navbar-default{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"}
            = image_tag "logo-buckybox.png"
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{class: "#{'active' if current_path == 'index.html'}"}
              = link_to "Home", "/"
            %li{class: "#{'active' if current_path == 'tour.html'}"}
              = link_to "Tour", "/tour.html"
            %li{class: "#{'active' if current_path == 'pricing.html'}"}
              = link_to "Pricing", "/pricing.html"
            -# %li
            -#   = link_to "Blog", "#"
            %li{class: "#{'active' if current_path == 'about.html' || current_page.data.category == 'about'}"}
              = link_to "About", "/about.html"
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "Business Login", "https://my.buckybox.com/distributors/sign_in", target: "_blank"
            %li
              = link_to "Sign Up", "javascript:void(0)", class: 'sign_up'

  .container-fluid
    %hr{style: "margin: 0"}


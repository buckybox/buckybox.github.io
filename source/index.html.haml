            .text Recipe Food Bag Schemes
      .operation.col-xs-6.col-sm-4
        %div{style: "background-image: url(images/usecase-lunch-deliveries.jpg)"}
          .text-container
            .text Lunch Deliveries
      .operation.col-xs-6.col-sm-4
        %div{style: "background-image: url(images/usecase-artisan-bread.jpg)"}
          .text-container
            .text Artisan Bakers
      .operation.col-xs-6.col-sm-4
        %div{style: "background-image: url(images/usecase-food-coop-and-buyers-club.jpg)"}
          .text-container
            .text Food Co-op
      .operation.col-xs-6.col-xs-offset-3.col-sm-4.col-sm-offset-4
        %div{style: "background: #71AACD"}
          .text-container{style: "height: 157px"}
            .text
              %strong= mail_to "support@buckybox.com", "Your Operations?"

  .row.text-center.voffset-3
    - content_for :press do |params|
      .col-xs-6.col-sm-4.col-lg-2.press
        %p
          = link_to params.fetch(:link), target: "_blank" do
            - image_tag "press-#{params.fetch(:image)}.png", class: "img-responsive", style: "margin: auto"

    = yield_content :press, image: "fastcompany", link: "http://www.fastcoexist.com/1679499/buckybox-helping-farmers-get-fresh-food-to-your-table"
    = yield_content :press, image: "springwise", link: "http://localfood.buckybox.com/2012/08/springwise-features-bucky-box-software-firm-focuses-on-helping-small-farms/"
    = yield_content :press, image: "unlimited", link: "http://localfood.buckybox.com/2012/06/unlimited-magazine-social-enterprise-nz/"
    = yield_content :press, image: "idealog", link: "http://www.idealog.co.nz/blog/2012/02/bucky-box"
    = yield_content :press, image: "greenfutures", link: "http://www.forumforthefuture.org/greenfutures/articles/web-based-app-simplifies-food-box-admin"
    = yield_content :press, image: "seedstock", link: "http://seedstock.com/2012/01/16/nz-social-enterprise-bucky-box-to-simplify-distribution-for-sustainable-farmers-with-web-based-application/"

  .row.text-center.voffset-2

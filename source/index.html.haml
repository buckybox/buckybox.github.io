          .text-container
            .text Community Supported Agriculture
      .operation.col-xs-6.col-sm-4
        %div{style: "background-image: url(images/usecase-vegetable-box-scheme.jpg)"}
          .text-container
            .text Veg Box Schemes
      .operation.col-xs-6.col-sm-4
        %div{style: "background-image: url(images/usecase-recipe-food-bag.jpg)"}
